  "options_page" : "option_page.html",
  "browser_action": {
    "default_title": "hoge",
    "popup": "popup.html"
  },
  "content_scripts": [
                      {
                        "js": [
							   "jquery.js",
                                "socket.io.js",
                               "main.js"
